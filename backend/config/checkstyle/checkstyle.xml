<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <!-- 클래스 파일명 접미사 검사 (Entity, Controller, Service, Repository, Dto) -->
    <module name="RegexpSingleline">
        <property name="format" value="(Entity|Controller|Service|Repository|DTO)\.java$"/>
        <property name="message" value="❌ 클래스 파일명은 반드시 Entity, Controller, Service, Repository, DTO 접미사를 포함해야 합니다."/>
    </module>

    <module name="TreeWalker">
        <!-- 패키지명 검사 (소문자만)-->
        <module name="PackageName">
            <property name="format" value="^[a-z.]+$"/>
        </module>

        <!-- 클래스명 검사 (UpperCamelCase) -->
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>

        <!-- 메서드명 검사 (camelCase) -->
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- 필드명 검사 -->
        <module name="MemberName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- 변수명 검사 (camelCase) -->
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
    </module>
</module>